# LLM Provider (required)
# Options: "ollama" (default, local) or "patriotai" (cloud, for judging)
LLM_PROVIDER=ollama

# Ollama (default provider, runs locally)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen3:8b

# PatriotAI (swap to this for judging)
PATRIOTAI_API_KEY=your_patriotai_api_key_here
PATRIOTAI_BASE_URL=https://api.patriotai.com/v1
PATRIOTAI_MODEL=patriotai-default

# ElevenLabs TTS (voice output, required)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB
ELEVENLABS_MODEL=eleven_turbo_v2_5
ENABLE_TTS=true

# Wake word (frontend uses this, configurable)
WAKE_WORD=hey vuddy

# Events data
EVENTS_DATA_PATH=./data/events_seed.json

# Hardware mode (optional)
# Options: "sim" (default, logs to console) or "arduino" (real serial)
HARDWARE_MODE=sim
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUD=115200

# Google Calendar (optional, falls back to fixture data)
GOOGLE_CALENDAR_CREDENTIALS=credentials/calendar-service-account.json
GOOGLE_CALENDAR_ID=primary
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret
# Must match Google Cloud OAuth redirect URI configuration
# For local dev: http://localhost:5173/google-calendar-callback.html
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:5173/google-calendar-callback.html

# App ports
BACKEND_PORT=8000
FRONTEND_PORT=5173
